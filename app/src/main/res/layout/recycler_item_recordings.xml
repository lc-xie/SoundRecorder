<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/ic_saved_recordings_2"
            android:scaleType="center"
            android:background="@drawable/bg_saved_recordings"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:layout_width="56dp"
            android:layout_height="56dp" />

        <RelativeLayout
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name_recording_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="filename"
                android:textSize="@dimen/text_size_recordings_bold"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/length_recording_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_below="@+id/name_recording_file"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/text_size_recordings_normal"/>

            <TextView
                android:id="@+id/data_recording_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mm dd yyyy - hh:mm a"
                android:layout_alignParentBottom="true"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/text_size_recordings_normal"/>

        </RelativeLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>